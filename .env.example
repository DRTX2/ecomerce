# Database Configuration
DB_URL=jdbc:postgresql://localhost:5432/ecomerce
DB_USERNAME=postgres
DB_PASSWORD=root

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379

# JWT Configuration
JWT_SECRET_KEY=your-secret-key-here-minimum-256-bits

# Email Configuration (Azure Communication Services)
AZURE_COMMUNICATION_CONNECTION_STRING=endpoint=https://your-resource.communication.azure.com/;accesskey=your-key
AZURE_SENDER_ADDRESS=DoNotReply@yourdomain.com

# Email Configuration (JavaMail - Alternative)
MAIL_USERNAME=your-email@outlook.com
MAIL_PASSWORD=your-password

# Test Email
TEST_EMAIL=test@example.com

# Azure Storage (Azurite - Local Development)
# NOTE: Do NOT set AZURE_STORAGE_CONNECTION_STRING for local development
# The application.yml already has the correct Azurite connection string as default
# AZURE_STORAGE_CONNECTION_STRING=DefaultEndpointsProtocol=http;AccountName=devstoreaccount1;AccountKey=Eby8vdM02xNOcqFlqUwJPLlmEtlCDXJ1OUzFT50uSRZ6IFsuFq2UVErCz4I6tq/K1SZFPTOtr/KBHBeksoGMGw==;BlobEndpoint=http://localhost:10000/devstoreaccount1;

# Storage Container
STORAGE_CONTAINER_NAME=uploads

# Storage Limits
STORAGE_MAX_FILE_SIZE=5242880        # 5MB in bytes
STORAGE_MAX_FILES_COUNT=5
STORAGE_MAX_TOTAL_SIZE=20971520      # 20MB in bytes
STORAGE_ALLOWED_CONTENT_TYPES=image/jpeg,image/png,image/webp

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000