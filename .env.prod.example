# =====================================================
# VARIABLES DE ENTORNO - PRODUCCIÓN
# =====================================================
# Valores mínimos necesarios para producción
# Los defaults de producción están en application-prod.yml
# Solo necesitas configurar las variables sin default
# =====================================================

# ============================
# PERFIL ACTIVO
# ============================
SPRING_PROFILES_ACTIVE=prod

# ============================
# BASE DE DATOS (REQUERIDO)
# ============================
DB_URL=jdbc:postgresql://your-db-host:5432/amazon_db
DB_USERNAME=your_db_user
DB_PASSWORD=your_secure_db_password

# ============================
# JWT / SEGURIDAD (REQUERIDO)
# ============================
# IMPORTANTE: Genera una clave segura con al menos 256 bits
# Ejemplo: openssl rand -base64 32
JWT_SECRET_KEY=your-super-secure-production-secret-key-here

# Opcional: Sobrescribir defaults de producción
# Por defecto usa: Access=15min, Refresh=7días (definido en application-prod.yml)
# JWT_ACCESS_EXPIRATION=900000
# JWT_REFRESH_EXPIRATION=604800000

# ============================
# CORS (REQUERIDO)
# ============================
CORS_ALLOWED_ORIGINS=https://your-production-domain.com

# ============================
# SERVER (Opcional)
# ============================
# SERVER_PORT=8080

# ============================
# CLEANUP DE TOKENS (Opcional)
# ============================
# Por defecto usa los valores de application-prod.yml
# TOKEN_CLEANUP_CRON=0 0 */6 * * *
# REVOKED_TOKEN_RETENTION_DAYS=7

# ============================
# LOGGING (Opcional)
# ============================
# Por defecto: INFO/WARN según application-prod.yml
# APP_LOG_LEVEL=INFO
# AUTH_LOG_LEVEL=INFO
# SECURITY_LOG_LEVEL=WARN

# ============================
# EMAIL (Si se usa)
# ============================
# EMAIL_PROVIDER=azure
# MAIL_USERNAME=
# MAIL_PASSWORD=
# TEST_EMAIL=

# ============================
# AZURE (Si se usa)
# ============================
# AZURE_COMMUNICATION_CONNECTION_STRING=
# AZURE_SENDER_ADDRESS=
# AZURE_STORAGE_CONNECTION_STRING=
# STORAGE_CONTAINER_NAME=uploads

# ============================
# REDIS (Si se usa)
# ============================
# REDIS_HOST=your-redis-host
# REDIS_PORT=6379

